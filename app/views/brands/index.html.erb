<p id="notice"><%= notice %></p>

    <div class="card">
      <div class="card-header" data-background-color="purple">
    		<h3 class="title text-center">Marcas</h3>
        <h6 class="category text-center">Cantidad de Marcas: <%= @brands.count %></h6>
    	</div>
      <table class="table">
        <thead>
          <tr>
            <th>#</th>
            <th>Nombre</th>
            <th>Descripci√≥n</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @brands.each.with_index(1) do |brand, index| %>
          <tr>
            <td><%= index %></td>
            <td><%= brand.name %></td>
            <td><%= brand.description %></td>
            <td><%= link_to brand do %>
              <i class="fa fa-eye" style="color: #03a9f4"></i>
            <% end %></td>
            <td><%= link_to edit_brand_path(brand) do %>
              <i class="fa fa-edit"></i>
            <% end %></td>
            <td><%= link_to brand, method: :delete, data: { confirm: 'Are you sure?' } do %>
              <i class="fa fa-remove" style="color: red"></i>
            <% end %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>

