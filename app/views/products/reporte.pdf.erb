

    <h3>Productos</h3>
    <h6>Cantidad de Productos: <%= @products.count %></h6>
  <table class="table">
    <thead>
    <tr>
      <th>#</th>
      <th>Nombre</th>
      <th>Codigo</th>
      <th>Precio de Compra</th>
      <th>Marca</th>
      <th>Categoria</th>
      <th>Proveedor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each.with_index(1) do |product, index| %>
      <tr>
        <td><%= index %></td>
        <td><%= product.name %></td>
        <td><%= product.code %></td>
        <td><%= product.buy_price %></td>
        <td><%= product.brand.name %></td>
        <td><%= product.category.name %></td>
        <td><%= product.provider.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>
