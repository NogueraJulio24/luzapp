<p id="notice"><%= notice %></p>

<div class="card">
  <div class="card-header" data-background-color="purple">
    <h3 class="title text-center">Categorias</h3>
    <h6 class="category text-center">Cantidad de Categorias: <%= @categories.count %></h6>
  </div>
  <table class="table table-responsive table-hover">
    <thead>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Description</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each.with_index(1) do |category, index| %>
      <tr>
        <td><%= index %></td>
        <td><%= category.name %></td>
        <td><%= category.description %></td>
        <td><%= link_to edit_category_path(category) do %>
          <i class="fa fa-edit"></i>
        <% end %></td>
        <td><%= link_to category, method: :delete, data: { confirm: '¿Está seguro que desea eliminar ' + category.name + '?' } do %>
          <i class="fa fa-remove" style="color: red"></i>
        <% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

<%= link_to 'Nueva Categoria', new_category_path, :class => 'btn btn-success' %>
